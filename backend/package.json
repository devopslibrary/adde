{
  "name": "adde-backend",
  "version": "0.0.1",
  "description": "",
  "author": "devopslibrary",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_ENV='' nest start",
    "start:dev": "NODE_ENV='' nest start --watch",
    "serve": "NODE_ENV='test' nest start --watch",
    "start:debug": "NODE_ENV='' nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/ormconfig.ts",
    "typeorm:migrate": "npm run typeorm migration:generate -- -n",
    "typeorm:run": "npm run typeorm migration:run"
  },
  "dependencies": {
    "@hapi/joi": "17.1.1",
    "@nestjs/common": "7.3.1",
    "@nestjs/config": "0.5.0",
    "@nestjs/core": "7.3.1",
    "@nestjs/passport": "7.1.0",
    "@nestjs/platform-express": "7.3.1",
    "@nestjs/terminus": "7.0.1",
    "@types/json-schema": "7.0.5",
    "dotenv": "8.2.0",
    "ejs": "3.1.3",
    "json-schema": "0.2.5",
    "jsonwebtoken": "8.5.1",
    "passport": "0.4.1",
    "passport-http-bearer": "1.0.1",
    "readdirsync2": "1.0.2",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.6.0",
    "simple-git": "2.11.0",
    "tmp": "0.2.1",
    "typeorm": "0.2.25",
    "yamljs": "0.3.0"
  },
  "devDependencies": {
    "@nestjs/cli": "7.4.1",
    "@nestjs/schematics": "7.0.1",
    "@nestjs/testing": "7.3.1",
    "@types/express": "4.17.7",
    "@types/jest": "26.0.4",
    "@types/node": "13.13.13",
    "@types/passport-local": "1.0.33",
    "@types/supertest": "2.0.10",
    "jest": "26.1.0",
    "jest-sonar-reporter": "2.0.0",
    "nock": "12.0.3",
    "prettier": "2.0.5",
    "supertest": "4.0.2",
    "swagger-parser": "9.0.1",
    "ts-jest": "26.1.1",
    "ts-loader": "7.0.5",
    "ts-node": "8.10.2",
    "tsconfig-paths": "3.9.0",
    "tslint": "6.1.2",
    "typescript": "3.9.6"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverage": true,
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testResultsProcessor": "jest-sonar-reporter",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "/cache/",
      "/dist/",
      "/test/",
      "/src/main.ts"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
